# This workflow lints YAML files in the repository using https://github.com/adrienverge/yamllint.
# It gets triggered on every 'push' event and checks both .yaml and .yml files.


name: Yaml Lint
on: [push]  # yamllint disable-line rule:truthy
jobs:
  lintAllTheThings:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: yaml-lint
        uses: ibiqlik/action-yamllint@v3
